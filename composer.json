{
    "name": "valiant-bedrock/libgame",
    "description": "A PocketMine-MP game library meant to simplify the process of creating gamemodes",
    "type": "library",
    "version": "0.2.0",
    "autoload": {
        "psr-4": {
            "libgame\\": "src/libgame"
        }
    },

    "require": {
        "php": ">=8.1",
        "sylvrs/libmarshal": ">=1.4.3",
        "valiant-bedrock/libscoreboard": ">=0.5.0"
    },
    "require-dev": {
        "phpstan/phpstan": "1.6.x-dev",
        "friendsofphp/php-cs-fixer": ">=2.19.3",
        "pocketmine/pocketmine-mp": "dev-legacy/pm4"
    },
    "scripts": {
        "analyze": "./vendor/bin/phpstan analyze",
        "run-cs-fixer": "./vendor/bin/php-cs-fixer fix --diff --ansi"
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "sylvrs",
            "email": "personal@matthewjordan.xyz"
        }
    ],
    "minimum-stability": "dev",
    "repositories": [
        { "type": "vcs", "url": "git@github.com:NetherGamesMC/PocketMine-MP.git" },
        { "type": "vcs", "url": "git@github.com:NetherGamesMC/BedrockProtocol.git" },
        { "type": "vcs", "url": "git@github.com:NetherGamesMC/BedrockData.git" },
        { "type": "vcs", "url": "git@github.com:Valiant-Bedrock/libscoreboard.git" }
    ]
}
